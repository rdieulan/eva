{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist-server",
    "baseUrl": ".",
    "paths": {
      "@db/*": ["src/db/*"],
      "@middleware/*": ["src/middleware/*"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["index.ts", "src/**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules"]
}
