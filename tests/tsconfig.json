{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitest/globals", "node"],
    "baseUrl": "..",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../client/src/**/*.ts",
    "../client/src/**/*.vue",
    "../shared/**/*.ts"
  ]
}

